<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include 'categories-section' %}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>        
{% schema %}
{
  "name": "Category Boxes section",
  "max_blocks": 6,
  "settings": [
	{
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Category"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Box",
      "settings": [
		{
          "type": "image_picker",
          "id": "image",
          "label": "Category Image",
		  "info": "130x100px recommended"
		},
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
		{
          "type": "url",
          "id": "link",
          "label": "Image Link URL"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Category box section",
    "category": "Feature Sections",
    "blocks": [
      {
        "type": "category"
      },
      {
        "type": "category"
      }
    ]
  }]
}
{% endschema %}