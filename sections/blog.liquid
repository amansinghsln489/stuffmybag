<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} {% if section.settings.b-padding == true %} b-padding{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.layout %}         
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
   "name": "Blog section",
   "class": "index-section index-section--flush",
   "max_blocks": 3,
   "settings": [
      {
         "type": "select",
         "id": "layout",
         "label": "Select layout design",
         "options": [
            {
               "value": "blog-1",
               "label": "Design 1"
            }
         ]
      },
      {
         "type": "checkbox",
         "id": "fullwidth",
         "label": "Set Div fullwidth?",
         "default": true
      },
      {
         "type": "text",
         "id": "heading",
         "label": "Heading",
         "default": "LATEST BLOGS & UPDATES"
      },
      {
         "type": "blog",
         "id": "blog",
         "label": "Blog"
      }
   ],
   "blocks": [],
   "presets": [
      {
         "name": "Blog section",
         "category": "Feature Sections"
      }
   ]
}
{% endschema %}
