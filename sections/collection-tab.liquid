<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          {% include section.settings.products_tab_layout %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Collection Tabs",
  "class": "index-section",
	 "settings": [
      {
        "type": "header",
        "content": "Select the collection to show products from"
      },
      {
        "type": "select",
        "id": "products_tab_layout",
        "label": "Select section layout",
        "options": [
          {
            "value": "products-tab1",
            "label": "Design 1"
          },
		  {
            "value": "products-tab2",
            "label": "Design 2"
          },
		  {
            "value": "products-tab2alt",
            "label": "Design 2 Alt Heading"
          },
		  {
            "value": "products-tab3",
            "label": "Design 3"
          },
		  {
            "value": "products-tab3alt",
            "label": "Design 3 Alt Heading"
          },
		  {
            "value": "products-tab4",
            "label": "Design 4"
          }
        ]
      },
      {
      "type": "select",
      "id": "listing_rows",
      "label": "No of product rows",
      "options": [
          {
          "value": "1",
          "label": "1"
          },
          {
          "value": "2",
          "label": "2"
          },
          {
          "value": "3",
          "label": "3"
          },
          {
          "value": "4",
          "label": "4"
          },
          {
          "value": "5",
          "label": "5"
          }
        ],
        "default": "2"
      },
	  {
	    "type": "text",
    	"id": "no_of_products",
    	"label": "No of products in a row",
    	"default": "2",
        "info": "Used for column as well in vertical layouts"

      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Background Color",
        "default": "#ff8d68"
      },
      {
        "type": "text",
        "id": "heading_icon",
        "label": "Heading Icon Code",
        "default": "\f356",
        "info": "Get icons from http:\/\/ionicons.com\/cheatsheet.html"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Collection image",
        "info": "270x494 for Design1, 570x180 for Design2"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Image URL",
        "info": "Used in Design1"
      },
      {
        "type": "text",
        "id": "heading2",
        "label": "Heading 2",
        "default": "Featured collection"
      },
      {
        "type": "color",
        "id": "heading_color2",
        "label": "Heading 2 Background Color",
        "default": "#ff8d68"
      },
      {
        "type": "text",
        "id": "heading_icon2",
        "label": "Heading 2 Icon Code",
        "default": "ion-ipad",
        "info": "Get icons from http:\/\/ionicons.com\/cheatsheet.html"
      },
      {
        "type": "image_picker",
        "id": "image2",
        "label": "Collection image 2",
        "info": "570x180 for Design2"
      },
	  {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Set Div Fullwidth?",
        "default": false
      },
      {
        "type": "collection",
        "id": "products_tab_collection1",
        "label": "Collection for Tab 1"
      },
      {
        "type": "collection",
        "id": "products_tab_collection2",
        "label": "Collection for Tab 2"
      },
      {
        "type": "collection",
        "id": "products_tab_collection3",
        "label": "Collection for Tab 3"
      },
      {
        "type": "collection",
        "id": "products_tab_collection4",
        "label": "Collection for Tab 4"
      },
      {
        "type": "collection",
        "id": "products_tab_collection5",
        "label": "Collection for Tab 5"
      },
      {
        "type": "text",
        "id": "products_tab_count",
        "label": "No of products to show",
        "default": "8"
      },
      {
        "type": "checkbox",
        "id": "product_grid_img_carousel",
        "label": "Slide All images in product grid?",
        "default": false,
        "info": "Used for Product grid carousel enable\/disable"
      }
    ],
  "presets": [
    {
      "name": "Collection Tabs",
      "category": "Collection"
    }
  ]
}
{% endschema %}
