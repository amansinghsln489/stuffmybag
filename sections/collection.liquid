<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} {% if section.settings.b-padding == true %} b-padding{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.collection_layout %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Featured collection",
"class": "index-section",
  "settings": [
    {
      "type": "select",
      "id": "collection_layout",
      "label": "Select section layout",
      "options": [
        {
        "value": "feature-carousal",
        "label": "Design 1"
        },
		{
        "value": "feature-carousal2",
        "label": "Design 2"
        },
		{
        "value": "feature-carousal2alt",
        "label": "Design 2 - Alt heading style"
        }
      ]
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FEATURED PRODUCTS"
    },
    {
    "type": "text",
    "id": "heading_icon",
    "label": "Heading Icon Code",
    "default": "\f356",
    "info": "Get icons from http:\/\/ionicons.com\/cheatsheet.html"
    },
	{
      "type": "image_picker",
      "id": "image",
      "label": "Collection image",
	  "info": "270x365 for Design1"
    },
    {
    "type": "url",
    "id": "link",
    "label": "Image URL"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "select",
      "id": "listing_rows",
      "label": "No of product rows",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ],
      "default": "2"
    },
    {
      "type": "text",
      "id": "no_of_products",
      "label": "No of products in a row",
      "default": "4"
    },
    {
      "type": "text",
      "id": "products_tab_count",
      "label": "No of products to show",
      "default": "8"
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "product_grid_img_carousel",
      "label": "Slide All images in product grid?",
      "default": true,
      "info": "Used for Product grid carousel enable\/disable"
    }
  ],
  "presets": [
    {
    "name": "Featured collection",
    "category": "Collection"
    }
  ]
}
{% endschema %}
