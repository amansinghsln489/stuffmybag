<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %}{% if section.settings.b-padding == true %} b-padding b-padding1{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.feature_advert_design %}
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>    
{% schema %}
{
  "name": "Ad banner section",
  "class": "index-section index-section--flush",
  "max_blocks": 6,
  "settings": [
    {
    "type": "select",
    "id": "feature_advert_design",
    "label": "Select Design",
    "options": [
	  {
        "value": "feature-advert1",
        "label": "Design 1 (Single image)"
      },
	  {
        "value": "feature-advert2",
        "label": "Design 2 (Two images)"
      },
      {
      "value": "feature-advert3",
      "label": "Design 3 (Three images )"
      },
      {
      "value": "feature-advert4",
      "label": "Design 4 (Four images )"
      },
	  {
      "value": "feature-advert5",
      "label": "Design 5 (Five images )"
      }
    ],
    "default": "feature-advert2"
    },
	{
	    "type": "checkbox",
    	"id": "fullwidth",
    	"label": "Set Div fullwidth?",
    	"default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "ad image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
		},
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
		{
          "type": "textarea",
          "id": "description",
          "label": "Slide Description"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Ad banner section",
    "category": "Image",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}
