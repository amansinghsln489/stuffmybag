<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.collection_layout %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
   "name": "Deal of the day",
   "max_blocks": 6,
   "settings": [
    {
    "type": "select",
    "id": "collection_layout",
    "label": "Select section layout",
    "options": [
    {
    "value": "deals-layout1",
    "label": "Design 1"
    },
    {
    "value": "deals-layout2",
    "label": "Design 2"
    }
    ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "DEALS OF THE DAY"
    },
	{
      "type": "image_picker",
      "id": "image",
      "label": "Collection image",
	  "info": "270x365 for Design3"
    },
    {
    "type": "url",
    "id": "link",
    "label": "Image URL"
    },
    {
    "type": "checkbox",
    "id": "fullwidth",
    "label": "Set Div fullwidth?",
    "default": true
    }
   ],
   "blocks": [
      {
         "type": "deal",
         "name": "deal product",
         "settings": [
            {
               "type": "product",
               "id": "product_deal",
               "label": "Product"
            },
            {
               "type": "text",
               "id": "expiry_deal",
               "label": "Expiry",
               "info": "(yyyy,mm,dd)"
            }
         ]
      }
   ],
   "presets": [
      {
         "name": "Deals section",
         "category": "Collection",
         "blocks": [
            {
               "type": "deal"
            },
            {
               "type": "deal"
            }
         ]
      }
   ]
}
{% endschema %}
