<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} {% if section.settings.b-padding == true %} b-padding b-padding2{% endif  %}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            <div id="cmsblock-{{ section.id }}" class="cmsblock">
              <div class='description'>
                <div class="static-about">
                  {% if section.settings.heading_top != blank %}  
                  <h3>{{ section.settings.heading_top }}</h3>
                  {% endif %}
                  {% if section.settings.heading != blank %}  
                  <h1>{{ section.settings.heading }}</h1>
                  {% endif %}
                  {% if section.settings.description != blank %}
                  {{ section.settings.description }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Message Box",
  "settings": [
    {
      "type": "text",
      "id": "heading_top",
      "label": "Heading Top"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading Main"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Slide Description"
    },
	{
	    "type": "checkbox",
    	"id": "fullwidth",
    	"label": "Set Div fullwidth?",
    	"default": false
    }
  ],
  "presets": [{
    "name": "Message Box",
    "category": "Feature Sections"
  }]
}
{% endschema %}