<div id="blog_home" class="menu-recent module-title-style2 module-nav2">
  <div class="">
    <div class="blog-title module-title">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="box-module">
      <div class="articles-container owl-carousel owl-theme">
        {% for article in blogs[section.settings.blog].articles %}
        <div class="row_items">
          <div class="articles-inner item-inner">
            <div class="articles-image">
              <a href="{{ article.url }}">
                <img src="{{ article.image.src | img_url: '363x250' }}" alt="">
              </a>
            </div>
            <div class="aritcles-content">
              <a class="articles-name" href="{{ article.url }}">{{ article.title }}</a> 
              <div class="articles-date">
                <span class="dates">
                  <time datetime="{{ article.published_at | date }}">
                    {{ article.published_at | date: '%b <span>%d</span>' }}
                  </time>
                </span>
                <span class="author-name">
                  {{ 'blogs.article.by' | t }}: 
                  <span>{{ article.author }}</span>
                </span>
              </div>
              <div class="articles-intro">
                <p>
                  {% if article.excerpt.size > 0 %}
                  {{ article.excerpt | truncatewords: 15}}
                  {% else %}
                  {{ article.content | strip_html | truncatewords: 15 }}
                  {% endif %}
                </p>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $(".articles-container").owlCarousel({
      autoPlay :  false ,
      items : 3,
      margin: 30,
      loop: true,			
      navSpeed : 1000,
      dotsSpeed : 1000,
      autoplaySpeed : 1000,
      nav :  true ,
      dots :  false ,
      navText : ['<i class="ion-chevron-left"></i>','<i class="ion-chevron-right"></i>'],
      responsive:{
        0:{
          items: 1,
          nav:false
        },
        480:{
          items: 2,
          nav:false
        },
        768:{
          items: 2
        },
        992:{
          items: 3
        },
        1200:{
          items: 3
        }
      }
    });
  });
</script>
