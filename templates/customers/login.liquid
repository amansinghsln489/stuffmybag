    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
}

input.form-control:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Button styles */
.btn {
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
}

.btn-primary {
    background-color: #007bff;
    border: none;
    color: white;
}

.btn-primary:hover {
    background-color: #0056b3;
}

.btn-acct {
    color: #007bff;
    font-size: 14px;
    text-decoration: none;
}

.btn-acct:hover {
    text-decoration: underline;
}

/* Forgot password section */
#recover_password {
    margin-top: 20px;
}

.lost-password {
    margin-top: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .row {
        flex-direction: column;
        align-items: center;
    }

    .col-sm-6 {
        max-width: 100%;
        padding: 0 15px;
    }
}
